@model List<RankingRecord>
@{
    ViewBag.Title = "Tabela";
}
<div class="jumbotron">
  <h1 class="text-center">@ViewBag.Title</h1>
</div>
<div class="row">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Gracz</th>
        <th>Mecze</th>
        <th>Wygrane</th>
      </tr>
    </thead>
    <tbody>
      @for(int i = 0; i < Model.Count; i++)
      {
        <tr>
          <td>@(i+1)</td>
          <td>@Model[i].Name</td>
          <td>@Model[i].Matches</td>
          <td>@Model[i].Wins</td>
        </tr>
      }
    </tbody>
  </table>
</div>